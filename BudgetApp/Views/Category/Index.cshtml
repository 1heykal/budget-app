@model IEnumerable<Category>
@{
    Layout = "../Shared/_Layout.cshtml";
}
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col"># of Members</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.ToList().Count; i++)
        {
            var category = Model.ToList()[i];
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Transactions.Count</td>
            </tr>
        }
    </tbody>
</table>